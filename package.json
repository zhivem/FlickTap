{
  "name": "movie-search-app",
  "version": "1.0",
  "description": "Приложение для поиска и просмотра фильмов",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron . --disable-gpu-sandbox --disable-features=VizDisplayCompositor",
    "dev": "electron . --debug --disable-gpu-sandbox --disable-features=VizDisplayCompositor",
    "dist": "electron-packager . \"Каталог Фильмов\" --platform=win32 --arch=x64 --out=release/ --overwrite --asar --prune=true --ignore=\"(\\\\.git|\\\\.vscode|src/|webpack\\\\..*|README\\\\.md|\\\\.npmrc|tsconfig\\\\.json|\\\\.eslintrc|test/|spec/)\" --app-copyright=\"Copyright 2024\" --app-version=1.0.0 --icon=assets/icon.ico"
  },
  "devDependencies": {
    "electron": "^39.1.1"
  },
  "dependencies": {
    "@ghostery/adblocker-electron": "^2.12.5",
    "axios": "^1.6.0",
    "cross-fetch": "^4.1.0",
    "dotenv": "^17.2.3",
    "electron-packager": "^17.1.2",
    "electron-store": "^11.0.2"
  },
  "author": "Zhivem",
  "license": "MIT"
}
